<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kichai.kichai.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kichai.kichai.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_undergraduateBrowseFragment"
            app:destination="@id/undergraduateBrowseFragment" />
        <action
            android:id="@+id/action_navigation_home_to_postGraduateBrowseFragment"
            app:destination="@id/postGraduateBrowseFragment" />
        <action
            android:id="@+id/action_navigation_home_to_englishMediumBrowseFragment"
            app:destination="@id/englishMediumBrowseFragment" />
        <action
            android:id="@+id/action_navigation_home_to_nctbBrowseFragment"
            app:destination="@id/nctbBrowseFragment" />
        <action
            android:id="@+id/action_navigation_home_to_abroadBrowseFragment"
            app:destination="@id/abroadBrowseFragment" />
        <action
            android:id="@+id/action_navigation_home_to_literatureBrowseFragment"
            app:destination="@id/literatureBrowseFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.kichai.kichai.ui.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/undergraduateBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.UndergraduateBrowseFragment"
        android:label="@string/undergraduate"
        tools:layout="@layout/fragment_undergraduate_browse" />
    <fragment
        android:id="@+id/postGraduateBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.PostGraduateBrowseFragment"
        android:label="@string/postgraduate"
        tools:layout="@layout/fragment_post_graduate_browse" />
    <fragment
        android:id="@+id/englishMediumBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.EnglishMediumBrowseFragment"
        android:label="@string/english_medium"
        tools:layout="@layout/fragment_english_medium_browse" />
    <fragment
        android:id="@+id/nctbBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.NctbBrowseFragment"
        android:label="@string/nctb"
        tools:layout="@layout/fragment_nctb_browse" />
    <fragment
        android:id="@+id/abroadBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.AbroadBrowseFragment"
        android:label="@string/abroad"
        tools:layout="@layout/fragment_abroad_browse" />
    <fragment
        android:id="@+id/literatureBrowseFragment"
        android:name="com.kichai.kichai.ui.categories.LiteratureBrowseFragment"
        android:label="@string/literature"
        tools:layout="@layout/fragment_literature_browse" />
    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.kichai.kichai.ui.customer_order_fragment.CustomerOrderMenuFragment"
        android:label="@string/my_orders"
        tools:layout="@layout/fragment_customer_order_menu" />

</navigation>
