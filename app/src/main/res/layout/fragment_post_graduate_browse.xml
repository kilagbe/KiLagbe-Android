<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.categories.PostGraduateBrowseFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/postgraduate_medical_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/medical"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/label_20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postgraduate_medical_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postgraduate_medical_text_view" />

        <TextView
            android:id="@+id/postgraduate_engineering_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/engineering"
            android:textColor="@color/colorPrimary"
            android:textSize= "@dimen/label_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postgraduate_medical_recycler_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postgraduate_engineering_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postgraduate_engineering_text_view" />

        <TextView
            android:id="@+id/postgraduate_mba_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/mba"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/label_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postgraduate_engineering_recycler_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postgraduate_mba_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postgraduate_mba_text_view" />

        <Button
            android:id="@+id/button_see_pg_med"
            android:background="@drawable/rounded_background_gradient"
            android:textColor="@color/White"
            android:textSize="@dimen/label_12sp"
            android:paddingHorizontal="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/see_more"
            app:layout_constraintBottom_toBottomOf="@+id/postgraduate_medical_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/postgraduate_medical_text_view"
            app:layout_constraintTop_toTopOf="@+id/postgraduate_medical_text_view" />

        <Button
            android:id="@+id/button_see_pg_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_gradient"
            android:paddingHorizontal="24dp"
            android:text="@string/see_more"
            android:textColor="@color/White"
            android:textSize="@dimen/label_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/postgraduate_engineering_text_view"
            app:layout_constraintEnd_toEndOf="@+id/button_see_pg_med"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/button_see_pg_med"
            app:layout_constraintTop_toTopOf="@+id/postgraduate_engineering_text_view" />

        <Button
            android:id="@+id/button_see_pg_mba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_gradient"
            android:paddingHorizontal="24dp"
            android:text="@string/see_more"
            android:textColor="@color/White"
            android:textSize="@dimen/label_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/postgraduate_mba_text_view"
            app:layout_constraintEnd_toEndOf="@+id/button_see_pg_eng"
            app:layout_constraintStart_toStartOf="@+id/button_see_pg_eng"
            app:layout_constraintTop_toTopOf="@+id/postgraduate_mba_text_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_shopping_cart_512" />


</androidx.constraintlayout.widget.ConstraintLayout>
