<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cardview_custom_width"
    android:layout_height="@dimen/cardview_custom_height"
    app:cardCornerRadius="@dimen/cardview_custom_corner_radius"
    app:cardElevation="@dimen/cardview_custom_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="#f2f2f2">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/cardview_custom_corner_radius"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dummy text"
            android:gravity="center"
            android:textSize="@dimen/text_carditem_main"
            android:textColor="@color/colorPrimary"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
            />

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>