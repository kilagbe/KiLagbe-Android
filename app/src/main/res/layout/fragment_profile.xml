<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/username_label"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="@dimen/label_fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="@dimen/text_fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/username_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_label"
        app:layout_constraintTop_toBottomOf="@+id/username_label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/username_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Edit"
        android:textSize="@dimen/text_button"
        app:layout_constraintBottom_toBottomOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/useremail_label"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Email address"
        android:textStyle="bold"
        android:textSize="@dimen/label_fullscreen"
        app:layout_constraintEnd_toEndOf="@+id/username_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_label"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="@dimen/text_fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/useremail_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/useremail_label"
        app:layout_constraintTop_toBottomOf="@+id/useremail_label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/useremail_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Edit"
        android:textSize="@dimen/text_button"
        app:layout_constraintBottom_toBottomOf="@+id/useremail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/useremail"
        app:layout_constraintTop_toTopOf="@+id/useremail"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/userphone_label"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Phone number"
        android:textStyle="bold"
        android:textSize="@dimen/label_fullscreen"
        app:layout_constraintEnd_toEndOf="@+id/useremail_label"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/useremail_label"
        app:layout_constraintTop_toBottomOf="@+id/useremail" />

    <TextView
        android:id="@+id/userphone"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:textSize="@dimen/text_fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/userphone_label"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userphone_label"
        app:layout_constraintTop_toBottomOf="@+id/userphone_label"
        app:layout_constraintVertical_bias="0.00" />

    <Button
        android:id="@+id/userphone_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Edit"
        android:textSize="@dimen/text_button"
        app:layout_constraintBottom_toBottomOf="@+id/userphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userphone"
        app:layout_constraintTop_toTopOf="@+id/userphone"
        app:layout_constraintVertical_bias="0.538" />

    <Button
        android:id="@+id/userpass_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:text="Edit password"
        android:textSize="@dimen/text_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userphone" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="@dimen/text_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userphone"
        app:layout_constraintVertical_bias="0.644" />

</androidx.constraintlayout.widget.ConstraintLayout>
