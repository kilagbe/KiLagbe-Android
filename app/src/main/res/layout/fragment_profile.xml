<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/username_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        android:text="Username"
        android:textSize="@dimen/label_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/username_edit"
        app:layout_constraintEnd_toStartOf="@+id/username_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_label"
        app:layout_constraintTop_toTopOf="@+id/username_edit"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/username_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Edit"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintEnd_toEndOf="@+id/username_label"
        android:textColor="@color/White"
        android:background="@drawable/rounded_background_gradient"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/username_label"
        app:layout_constraintTop_toBottomOf="@+id/username_label" />

    <TextView
        android:id="@+id/useremail_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email address"
        android:textSize="@dimen/label_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/username_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_label"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/useremail_edit"
        app:layout_constraintEnd_toStartOf="@+id/useremail_edit"
        app:layout_constraintStart_toStartOf="@+id/useremail_label"
        app:layout_constraintTop_toTopOf="@+id/useremail_edit" />

    <Button
        android:id="@+id/useremail_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Edit"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintEnd_toEndOf="@+id/useremail_label"
        android:textColor="@color/White"
        android:background="@drawable/rounded_background_gradient"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/useremail_label"
        app:layout_constraintTop_toBottomOf="@+id/useremail_label" />

    <TextView
        android:id="@+id/userphone_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Phone number"
        android:textSize="@dimen/label_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/useremail_label"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/useremail_label"
        app:layout_constraintTop_toBottomOf="@+id/useremail" />

    <TextView
        android:id="@+id/userphone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/userphone_edit"
        app:layout_constraintEnd_toStartOf="@+id/userphone_edit"
        app:layout_constraintStart_toStartOf="@+id/userphone_label"
        app:layout_constraintTop_toTopOf="@+id/userphone_edit"
        app:layout_constraintVertical_bias="0.00" />

    <Button
        android:id="@+id/userphone_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Edit"
        android:textSize="@dimen/label_12sp"
        app:layout_constraintEnd_toEndOf="@+id/userphone_label"
        android:textColor="@color/White"
        android:background="@drawable/rounded_background_gradient"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userphone_label"
        app:layout_constraintTop_toBottomOf="@+id/userphone_label" />

    <Button
        android:id="@+id/userpass_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:text="Edit password"
        android:textSize="@dimen/label_12sp"
        android:visibility="gone"
        android:textColor="@color/White"
        android:background="@drawable/rounded_background_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userphone" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/rounded_background_gradient"
            android:paddingHorizontal="32dp"
            android:text="Log out"
            android:textColor="@color/White"
            android:textSize="@dimen/label_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userpass_edit"
            app:layout_constraintVertical_bias=".5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
